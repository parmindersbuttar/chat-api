<%- include header.ejs %>
<%- include sidebar.ejs %>
<div class="main-content-wrap sidenav-open d-flex flex-column">
    <div class="breadcrumb">
        <h1>Edit Cause Area</h1>
    </div>
    <div class="separator-breadcrumb border-top"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-body">
                    <form method="post" action="/admin/listCauseEdit" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 form-group mb-3">
                                <label for="careCenterTypeName">Cause Area Name</label>
                                <input type="text" class="form-control" value="<%= result.causeAreaName %>"
                                    name="causeAreaName" id="causeAreaName" placeholder="Enter  Type Name" required>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label for="careCenterTypeDescription">Cause Area Description</label>
                                <textarea class="form-control" name="causeAreaDescription" id="causeAreaDescription"
                                    placeholder="Enter Type Description" rows="4"
                                    cols="50"><%= result.causeAreaDescription %></textarea>
                            </div>
                            <div class="col-md-6 form-group mb-3">
                                <label for="careCenterTypeName">Cause Area Image</label><br>
                                <label for="file"><img src="<%= process.env.IMAGE_URL+'/'+ result.causeAreaImage %>" style="width:90px" class="img-thumbnail"/></label>
                                <input type="file" class="form-control" name="file"
                                    id="file">
                            </div>
                            <input type="hidden" name="causeAreaId" id="causeAreaId" value="<%= result.causeAreaId %>">
                            <div class="col-md-6 form-group mb-3">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include footer.ejs %>